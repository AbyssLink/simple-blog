<!-- 文章创建页 -->
<%- include('header') %>

    <div class="container">
        <div class="row">
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-content ">
                        <span class="card-title materialize-red-text">Create Article!</span>
                        <div class="row">
                            <!-- 表单域 -->
                            <form class="col s12 m12 " method="POST" enctype="multipart/form-data">
                                <div class="container">
                                    <!-- 输入标题 -->
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <!-- 注意设置表单的 name 属性，根据name属性取值 -->
                                            <input name="title" id="title" type="text" class="validate">
                                            <label for="title">title</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col s12 m12" >
                                    <!-- 输入文章内容 -->
                                    <label>content</label>
                                    <!--<textarea name="content" style="height: 500px; margin-bottom: 30px;"></textarea>-->
                                    <div class="form-group ">
                                        <textarea name="content" id="editor"></textarea>
                                        <label for="content">Add support to markdown</label>
                                    </div>
                                    <!-- 提交表单的按钮，input type 为 submit -->
                                    <button href="#" class="waves-effect waves-light blue btn right" type="submit" name="action" id="submit_btn">Submit
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') %>