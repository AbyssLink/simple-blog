<!-- 电影创建页 -->
<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content ">
                    <span class="card-title materialize-red-text">Create Movie!</span>
                    <div class="row">
                        <!-- 表单域 -->
                        <form class="col s12 m12 " method="POST" enctype="multipart/form-data">
                            <div class="container">
                                <!-- 输入标题 -->
                                <div class="row">
                                    <div class="input-field col s12">
                                        <!-- 注意设置表单的 name 属性，根据name属性取值 -->
                                        <i class="material-icons prefix">title</i>
                                        <input name="title" id="title" type="text" class="validate">
                                        <label for="title">title</label>
                                    </div>
                                    <div class="input-field col s12 m12" >
                                        <!-- 电影网址 -->
                                        <i class="material-icons prefix">theaters</i>
                                        <label for="src">src</label>
                                        <input name="src" id="src" type="text" class="validate" placeholder="like: https://www.youtube.com/embed/pMW_sycSs30">
                                        <!-- 提交表单的按钮，input type 为 submit -->
                                        <button href="#" class="waves-effect waves-light blue btn right" type="submit" name="action" id="submit_btn" style="margin-top: 50px">Submit
                                            <i class="material-icons right">send</i>
                                        </button>
                                        <a class="waves-effect waves-light btn red" href="https://support.google.com/youtube/answer/171780?hl=zh-Hans" style="margin-top: 50px; margin-right:30px; float:right">
                                            <i class="material-icons right">help</i>HELP
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>