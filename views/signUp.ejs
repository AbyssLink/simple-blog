<%- include('header') %>

<!-- 注册表单(放在简单卡片中) -->
    <div class="container">
        <div class="row">
            <div class="col s12 m12">
                <div class="card z-depth-4">
                    <div class="card-content ">
                        <span class="card-title materialize-red-text">Register Form</span>
                        <div class="container">
                            <div class="row">
                                <form class="col s12" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <!-- 注意设置表单的name属性，根据该属性取值 -->
                                            <input name="name" id="name" type="text" class="validate" placeholder="Length between 1~10 letters">
                                            <label for="name">User Name</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <select id="gender" name="gender">
                                                <!-- 设置性别的值，可选为男，女，保密 -->
                                                <option value="male">male</option>
                                                <option value="female">female</option>
                                                <option value="secret">secret</option>
                                            </select>
                                            <label>Gender</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input id="email" type="email" class="validate" name="email">
                                            <label for="email">Email</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input placeholder="Length between 6~16" name="password" type="password" class="validate">
                                            <label for="password">Password</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input id="bio" type="text" class="validate" name="bio">
                                            <label for="bio">Your biography</label>
                                            <span class="helper-text" data-error="wrong" data-success="right">Your hobby, school, works and projects</span>
                                        </div>
                                    </div>
                                    <div class="file-field input-field">
                                        <div class="btn">
                                            <span>Choose File</span>
                                            <input type="file" id="avatar" name="avatar">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <button href="#" class="waves-effect waves-light blue btn right" type="submit" name="action" id="submit_btn">Submit
                                                <i class="material-icons right">send</i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
        
<%- include('footer') %>